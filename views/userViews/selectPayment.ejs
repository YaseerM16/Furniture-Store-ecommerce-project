    <script>


        function selectCOD() {
            // Check if the Cash On Delivery radio button is checked
            const isChecked = document.getElementById('cod').checked
            if (isChecked) {
                // If not, show the modal
                const form = document.createElement('form');
                form.method = 'get';
                form.action = '/checkoutPage';

                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'paymentmethod';
                input.value = document.querySelector('input[name="paymentmethod"]:checked').value;
                form.appendChild(input);

                document.body.appendChild(form);
                form.submit();
            } else {
                // If it is, select the radio button
                const paymentModal = new bootstrap.Modal(
                    document.getElementById("paymentModal")
                )
                paymentModal.show()
                document
                    .getElementById("close-btn")
                    .addEventListener("click", () => {
                        paymentModal.hide();
                    });
            }
        }
    </script>
