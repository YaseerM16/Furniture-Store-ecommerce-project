        document.getElementById('confirm-delete-address').addEventListener('click', async () => {
            const addressId = document.getElementById('delete-address-btn').dataset.addressId;
            const response = await fetch(`/deleteAddress?id=${addressId}`, {
                method: 'DELETE',
            });

            if (response.ok) {
                const result = await response.json();
                if (result.success) {
                    // show success message in modal
                    deleteAddressModal2.hide();
                    // document.getElementById('delete-modal-body').innerHTML = 'Address deleted successfully.';
                    const deleteSuccessModal = new bootstrap.Modal(document.getElementById('deleteSuccessModal'));
                    deleteSuccessModal.show();
                    document
                        .getElementById("delOkButton")
                        .addEventListener("click", () => {
                            deleteSuccessModal.hide();
                            // $('#address-table').load(`/addressPage #address-table`);
                            window.location.reload()
                        });
                } else {
                    // show error message in modal
                    const deleteAddressModal = new bootstrap.Modal(document.getElementById('deleteAddressModal'));
                    deleteAddressModal.hide();
                    const errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
                    errorModal.show();
                    document.getElementById('error-message').textContent = 'Error deleting address.';
                }
            } else {
                // show error message in modal
                const deleteAddressModal = new bootstrap.Modal(document.getElementById('deleteAddressModal'));
                deleteAddressModal.hide();
                const errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
                errorModal.show();
                document.getElementById('error-message').textContent = 'Error deleting address.';
            }
        });

    </script>
