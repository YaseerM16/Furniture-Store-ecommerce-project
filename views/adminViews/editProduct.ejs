                },
                success: function (response) {
                    // Remove the image element from the DOM
                    console.log("image deleted : index" + index);
                    console.log($('#image' + index));
                    $('#image' + index).fadeOut(300, function () {
                        console.log("Image faded out");
                        $(this).remove();
                    });
                }
            });
        });


