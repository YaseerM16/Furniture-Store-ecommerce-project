<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>Wuud - Furniture Store Website HTML5 Template | Cart</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Description website">
    <meta name="author" content="Maksym Blank">
    <meta name="keywords" content="website, with, meta, tags">
    <meta name="robots" content="noindex, follow">
    <meta name="revisit-after" content="5 month">
    <meta name="image" content="../../../../mywebsite.com/image.html">
    <meta name="og:title" content="Title website">
    <meta name="og:description" content="Description website">
    <meta name="og:image" content="../../../../mywebsite.com/image.html">
    <meta name="og:site_name" content="My Website">
    <meta name="og:type" content="website">
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="Title website">
    <meta name="twitter:description" content="Description website">
    <link rel="icon" type="image/png" sizes="32x32" href="favicon.ico">
    <!-- Css -->
    <link href="assets/css/plugins/bootstrap.min.css" rel="stylesheet">
    <link href="assets/fonts/font-awesome.min.css" rel="stylesheet">
    <link href="assets/css/plugins/magnific-popup.css" rel="stylesheet">
    <link href="assets/css/plugins/slick.css" rel="stylesheet">
    <link href="assets/css/style.css" rel="stylesheet">
    <link href="assets/css/responsive.css" rel="stylesheet">
    <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bungee+Spice&display=swap" rel="stylesheet">

    <style>
        #brand-name {
            font-family: "Bungee Spice", sans-serif;
            font-weight: 400;
            font-style: normal;
            font-size: 30px;
            background-color: #8a5d2a;
        }

        div .logoa {
            height: 150px;
            width: 136px;
            padding: 0 0 0 0;
        }

        .inner {
            height: 19vh;
        }

        .image-fit {
            width: 100%;
            object-fit: cover;
            object-position: center;
            height: 19vh;
        }

        .order_info {
            display: flex;
            flex-direction: column;
        }

        /* Default styles for all viewport widths */
        .order_list_block {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;

        }

        @media (min-width: 992px) {
            .navbar-expand-lg .navbar-nav {
                flex-direction: row;
                justify-content: space-around;
            }
        }


        /* .order_list_block .image_info_box {
            width: 30%;
        }

        .order_list_block .order_info {
            width: 20%;
        } */

        /* Styles for viewport widths less than 768px */
        @media (max-width: 767.98px) {
            .order_list_block .image_info_box {
                width: 100%;
            }

            .order_list_block .order_info {
                width: 50%;
            }

            .order_list_block .price {
                display: flex;
                justify-content: center;
            }
        }

        /* Styles for viewport widths less than 576px */
        @media (max-width: 575.98px) {
            .order_list_block .order_info {
                width: 100%;
            }
        }

        .h-100 {
            height: 100%;
            /* Occupy full height of parent container */
            display: flex;
            flex-direction: column;
        }

        .navbar {
            flex-grow: 1;
            /* Allow the navbar to grow and occupy available space */
        }

        .navbar-nav {
            flex-direction: column;
            /* Align nav items vertically */
        }
    </style>
</head>

<body>
    <!-- Preloader Start -->
    <div class="preloader">
        <img src="assets/images/preloader.svg" alt="preloader">
    </div>
    <!-- Preloader End -->
    <!-- Header Start -->
    <header class="header">
        <!-- Topbar -->
        <div class="topbar">
            <div class="container-fluid">
                <div class="inner">
                    <!-- Logo -->
                    <div class="logo">
                        <a href="#">
                            <div id="brand-name">&nbsp;Y-FURNS</div>
                            <!-- <img src="assets/images/logo.png" class="image-fi" alt="logo" height="100px" width="100px"> -->
                        </a>
                    </div>
                    <!-- Logo -->
                    <!-- Search Form -->
                    <div class="search-form">
                        <form>
                            <!-- Location -->

                            <!-- Location -->
                            <!-- Search -->
                            <div class="input-group">
                                <input type="text" name="#" class="form-control" placeholder="Search for products..."
                                    autocomplete="off" required>
                                <div class="input-group-append input-group-text">
                                    <button type="submit">
                                        <i class="fal fa-search"></i>
                                    </button>
                                </div>
                            </div>
                            <!-- Search -->
                        </form>
                    </div>
                    <!-- Search Form -->
                    <!-- Header Action -->
                    <div class="header_action">
                        <ul>

                            <li class="user">
                                <% if (user) { %>
                                    <a href="#">
                                        <img src="assets/images/header/user.png" class="image-fit" alt="img">
                                        <div class="cart_text">
                                            ADMIN
                                        </div>
                                        <span>
                                            <%= user.username %>
                                        </span>
                                    </a>
                                    <ul class="sub-menu">

                                        <li>
                                            <a href="/logout">Logout</a>
                                        </li>
                                    </ul>
                                    <% } else { %>
                                        <a href="account.html">
                                            <img src="assets/images/header/user2.png" class="image-fit" alt="img">
                                            <span>New User</span>
                                        </a>
                                        <ul class="sub-menu">
                                            <li>
                                                <a href="/logIn">Login</a>
                                            </li>
                                            <li>
                                                <a href="/signUp">SignUp</a>
                                            </li>
                                        </ul>
                                        <% } %>
                            </li>
                        </ul>
                    </div>
                    <!-- Header Action -->
                </div>
            </div>
        </div>
        <!-- Topbar -->
    </header>
    <!-- Header End -->
    <!-- Category Nav Start -->
    <section class="order-list">
        <div class="container-fluid" style="padding: 0;">
            <div class="row">
                <div class="col-xl-3 col-lg-4">
                    <div class="h-100">
                        <nav class="navbar navbar-expand-lg navbar-dark justify-content-around"
                            style="background-color: #604220;align-items: baseline;">
                            <div class="container-fluid d-flex justify-content-center">
                                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                                    aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="collapse navbar-collapse" id="navbarNav">
                                    <ul class="navbar-nav w-100 d-flex flex-column align-items-start">
                                        <li class="nav-item my-3 fs-5">
                                            <a class="nav-link" href="/adimDashBoard">Home</a>
                                        </li>
                                        <li class="nav-item my-3 fs-5">
                                            <a class="nav-link" href="/usersList">User Management</a>
                                        </li>
                                        <li class="nav-item my-3 fs-5">
                                            <a class="nav-link" href="/productList">Product Management</a>
                                        </li>
                                        <li class="nav-item my-3 fs-5">
                                            <a class="nav-link" href="/categoryList">Category Management</a>
                                        </li>
                                        <li class="nav-item my-3 fs-5">
                                            <a class="nav-link" href="/orderList">Order Management</a>
                                        </li>
                                        <li class="nav-item my-3 fs-5">
                                            <a class="nav-link" href="#">Sales Report</a>
                                        </li>
                                        <li class="nav-item my-3 fs-5">
                                            <a class="nav-link" href="#">Banner Management</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </nav>

                    </div>
                </div>
                <div class="col-xl-9 col-lg-8">
                    <div class="order_list_box sidebar">
                        <div class="row justify-content-center">
                            <!-- Item -->
                            <div class="col-10">
                                <div class="section-header">
                                    <h3 class="title">Orders List</h3>
                                </div>
                                <% for(let i=0;i<orders.length;i++){ %>
                                    <div class="order_list_block">
                                        <div class="image_info_box d-flex flex-column justify-content-around"
                                            style="margin-bottom: 30px;">
                                            <p class="mb-0 d-flex justify-content-center">Order Id</p>
                                            <div class="info">
                                                <h6 class="mb-0 name"><a
                                                        href="/orderSummary?orderID=<%= orders[i]._id%>">
                                                        <%= orders[i]._id%>
                                                    </a></h6>
                                            </div>
                                        </div>
                                        <div class="order_info">
                                            <p class="mb-0 d-flex justify-content-center">Name</p>
                                            <div class="price">
                                                <%= orders[i].userId.username%>
                                            </div>
                                        </div>
                                        <div class="order_info">
                                            <p class="mb-0 d-flex justify-content-center">Payment method</p>
                                            <div class="price" style="text-align: center;">
                                                <%= orders[i].paymentType%>
                                            </div>
                                        </div>
                                        <div class="order_info">
                                            <p class="mb-0 d-flex justify-content-center">Status</p>
                                            <div class="price">
                                                <%= orders[i].orderStatus%>
                                            </div>
                                        </div>
                                        <div class="order_info">
                                            <p class="mb-0 d-flex justify-content-center">Amount</p>
                                            <div class="price">
                                                â‚¹&nbsp;<%= orders[i].grandTotalCost%>
                                            </div>
                                        </div>

                                    </div>
                                    <% } %>
                            </div>
                        </div>
                    </div>
                    <!-- Section End -->
                    <!-- Footer Start -->
                    <div class="row">

                        <nav>
                            <ul class="pagination">
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= page - 1 %>" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                <% for(let i=1; i <=pages; i++){ %>
                                    <li class="page-item <%= page == i? 'active' : '' %>"><a class="page-link"
                                            href="?page=<%= i %>">
                                            <%= i %>
                                        </a></li>
                                    <!-- <% if(i < pages){ %> -->
                                    <!-- <li class="page-item disabled"><a class="page-link"
                                                                                            href="#">&hellip;</a></li>
                                                                                    <% } %> -->
                                    <% } %>
                                        <li class="page-item">
                                            <a class="page-link" href="?page=<%= page + 1 %>" aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                                <span class="sr-only">Next</span>
                                            </a>
                                        </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Category Nav End -->
    <!-- Section Start -->



    </div>
    <!-- Footer End -->
    <!-- Copyright Start -->
    <div class="copyright">
        <div class="container-fluid">
            <p class="mb-0">@Copyright 2022. <a href="#" class="thm-color-one">Website.com</a> All Rights Reserved</p>
        </div>
    </div>
    <!-- Copyright End -->
    <!-- Scripts -->
    <script src="assets/js/plugins/jquery-3.6.0.min.js"></script>
    <script src="assets/js/plugins/bootstrap.bundle.min.js"></script>
    <script src="assets/js/plugins/slick.min.js"></script>
    <script src="assets/js/plugins/jquery.magnific-popup.min.js"></script>
    <script src="assets/js/plugins/jquery.counterup.min.js"></script>
    <script src="assets/js/plugins/jquery.inview.min.js"></script>
    <script src="assets/js/custom.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        const orderDet = '<%- JSON.stringify(orders) %>'
        const orders = JSON.parse(orderDet)
        console.log(orders);
    </script>
</body>

</html>