    <script>

        async function fnList(catName) {
            let response = await fetch(`/listCategory?id=${catName}`, {
                method: 'GET',
            })
            let result = await response.json()
            if (result.list) {
                await Swal.fire({
                    icon: "error",
                    title: "Category Unlisted",
                });
            }
            window.location.reload();
        }

        async function fnUnlist(catName) {
            let response = await fetch(`/unListCategory?id=${catName}`, {
                method: 'GET',
            })
            let result = await response.json()
            if (result.unlist) {
                await Swal.fire({
                    icon: "success",
                    title: "Category listed",
                    confirmButtonText: "OK",
                });
            }
            window.location.reload();
        }

        document.querySelector('.category-offers-button').addEventListener("click", () => {
            window.location.href = '/category-offers-page'
        })
    </script>
