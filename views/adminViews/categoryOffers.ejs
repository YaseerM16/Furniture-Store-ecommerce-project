                        <!-- Search Form -->

                        <div class="d-flex w-100 justify-content-between">
                            <div class="section-header">
                                <h3 class="title">Category Offers</h3>
                            </div>
                        </div>

                        <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                            data-bs-target="#addCategoryOfferModal" style="margin-bottom: 15px;">
                            Add new Category Offer
                        </button>
                        <% if (!categoryOffersDet || categoryOffersDet.length===0) { %>
                            <div class="col-lg-6 mx-auto text-center p-5 mt-4">
                                <!-- Category offer icon with gradient -->
                                <svg width="96" height="96" viewBox="0 0 24 24" fill="none" class="mb-4">
                                    <linearGradient id="category-offer-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                                        <stop offset="0%" stop-color="#f8f9fa" />
                                        <stop offset="100%" stop-color="#e9ecef" />
                                    </linearGradient>
                                    <path
                                        d="M5 8h14M5 8a2 2 0 1 1 0-4h14a2 2 0 1 1 0 4M5 8v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V8"
                                        fill="url(#category-offer-gradient)" stroke="#adb5bd" stroke-width="1" />
                                    <path d="M12 12l-3 3m0 0l3 3m-3-3h6" fill="none" stroke="#6c757d"
                                        stroke-width="1.5" />
                                </svg>

                                <h5 class="text-dark mb-3 fw-semibold">
                                    <%= bySearch ? 'No Category Offers Found' : 'No Active Category Offers' %>
                                </h5>

                                <p class="text-muted mb-4">
                                    <%= bySearch ? `No category offers match "${bySearch}" . Try different keywords.`
                                        : 'There are currently no active category offers. Create new offers to boost category sales.'
                                        %>
                                </p>

                                <div class="d-flex justify-content-center gap-3 mt-1">


                                    <% if (bySearch) { %>
                                        <button onclick="clearSearch()"
                                            class="thm-btn btn-rectangle btn-outline-secondary lh-normal btn-small">
                                            <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16"
                                                class="me-2">
                                                <path
                                                    d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z" />
                                                <path
                                                    d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z" />
                                            </svg>
                                            Reset Search
                                        </button>
                                        <% } else { %>
                                            <a href="/admin/category-offers/new"
                                                class="thm-btn btn-rectangle thm-bg-color-one lh-normal btn-small">
                                                <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16"
                                                    class="me-2">
                                                    <path
                                                        d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                                                </svg>
                                                Create Category Offer </a>
                                            <% } %>
                                </div>
                            </div>
                            <% } else { %>
                                <div>
                                    <!--Category Offer Modal -->
                                    <div class="modal fade" id="addCategoryOfferModal" tabindex="-1"
                                        aria-labelledby="addCategoryOfferModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">

                                                <!-- Modal Header -->
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="addCategoryOfferModalLabel">Add Category
                                                        Offer</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>

                                                <!-- Modal Form -->
                                                <form id="addCategoryOfferForm" role="form">
                                                    <div class="modal-body">

                                                        <!-- Category Name -->
                                                        <div class="mb-3">
                                                            <label for="categoryName" class="form-label">Category
                                                                Name:</label>
                                                            <select name="categoryName" id="categoryName"
                                                                class="form-select">
                                                                <% categoryDet.forEach(category=> { %>
                                                                    <option value="<%= category.categoryName %>">
                                                                        <%= category.categoryName %>
                                                                    </option>
                                                                    <% }); %>
                                                            </select>
                                                        </div>

                                                        <!-- Offer Percentage -->
                                                        <div class="mb-3">
                                                            <label for="categoryOfferPercentage"
                                                                class="form-label">Category
                                                                Offer
                                                                Percentage:</label>
                                                            <input id="categoryOfferPercentage"
                                                                name="categoryOfferPercentage" class="form-control"
                                                                placeholder="Enter the offer percentage">
                                                            <div class="form-text">Choose a percentage to be discounted.
                                                                Between 5%
                                                                and 90%.</div>
                                                        </div>

                                                        <!-- Start Date -->
                                                        <div class="mb-3">
                                                            <label for="categoryOfferStartDate" class="form-label">Offer
                                                                Start
                                                                Date:</label>
                                                            <input id="categoryOfferStartDate"
                                                                name="categoryOfferStartDate" type="date"
                                                                class="form-control">
                                                            <div class="form-text">Choose a start date for the offer to
                                                                be
                                                                considered.</div>
                                                        </div>

                                                        <!-- End Date -->
                                                        <div class="mb-3">
                                                            <label for="categoryOfferEndDate" class="form-label">Offer
                                                                Expiry
                                                                Date:</label>
                                                            <input id="categoryOfferEndDate" name="categoryOfferEndDate"
                                                                type="date" class="form-control">
                                                            <div class="form-text">Choose an expiry date for offer to
                                                                end.
                                                            </div>
                                                        </div>

                                                    </div>

                                                    <!-- Modal Footer -->
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-bs-dismiss="modal">Close</button>
                                                        <button id="addCouponBtn" type="submit"
                                                            class="btn btn-info">Save
                                                            changes</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>


                                    <script>
                                        const category = '<%- JSON.stringify(categoryOffersDet) %>'
                                        const parsedData = JSON.parse(category)
                                        console.log(parsedData);
                                        $(document).ready(function () {
                                            $("#addCategoryOfferForm").validate({
                                                rules: {
                                                    categoryName: "required",
                                                    categoryOfferPercentage: {
                                                        required: true,
                                                        min: 5,
                                                        max: 90
                                                    },
                                                    categoryOfferStartDate: {
                                                        required: true,
                                                    },
                                                    categoryOfferEndDate: {
                                                        required: true,
                                                    }
                                                },
                                                submitHandler: async function (form, event) {
                                                    event.preventDefault()

                                                    let formData = {
                                                        categoryName: form.categoryName.value,
                                                        categoryOfferPercentage: form.categoryOfferPercentage.value,
                                                        categoryOfferStartDate: form.categoryOfferStartDate.value,
                                                        categoryOfferEndDate: form.categoryOfferEndDate.value
                                                    }

                                                    let response = await fetch('/admin/categoryOfferManagement/addOffer', {
                                                        method: 'POST',
                                                        headers: { "Content-Type": "application/json" },
                                                        body: JSON.stringify(formData)
                                                    })

                                                    let result = await response.json()

                                                    if (result.success) {
                                                        await Swal.fire({
                                                            icon: "success",
                                                            title: "Category Offer Added"
                                                        }).then(() => {
                                                            $('#category-offer-table').load('/admin/categoryManagement/category-offers-page #category-offer-table');
                                                            const modalElement = document.getElementById(`addCategoryOfferModal`);
                                                            const modalInstance = bootstrap.Modal.getInstance(modalElement);
                                                            if (modalInstance) modalInstance.hide();
                                                            form.reset()
                                                        })
                                                    } else {
                                                        await Swal.fire({
                                                            icon: "error",
                                                            title: "Category Offer Already Exists for This Category",
                                                            text: "Please try editing the offer of this particular categotry",
                                                        });
                                                    }
                                                }
                                            });
                                        });
                                    </script>

