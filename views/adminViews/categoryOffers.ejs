                                                    <div class="d-flex justify-content-center">
                                                        Category
                                                    </div>
                                                </th>
                                                <th scope="col">
                                                    <div class="d-flex justify-content-center">Offer Percentage</div>
                                                </th>
                                                <th scope="col">
                                                    <div class="d-flex justify-content-center">Start Date</div>
                                                </th>
                                                <th scope="col">
                                                    <div class="d-flex justify-content-center">End Date</div>
                                                </th>
                                                <th scope="col">
                                                    <div class="d-flex justify-content-center">Current Status</div>
                                                </th>
                                                <th scope="col">
                                                    <div class="d-flex justify-content-center">Action</div>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(let i=0;i<categoryOffersDet.length;i++){ %>
                                                <tr>
                                                    <th scope="row">
                                                        <div class="d-flex justify-content-center">
                                                            <%= categoryOffersDet[i].categoryName %>
                                                        </div>
                                                    </th>
                                                    <td>
                                                        <div class="d-flex justify-content-center">
                                                            <%= categoryOffersDet[i].categoryOfferPercentage %>&nbsp;%
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex justify-content-center">
                                                            <%= categoryOffersDet[i].startDate.toLocaleDateString('en-US',
                                                                { year: 'numeric' , month: '2-digit' , day: '2-digit' })
                                                                %>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex justify-content-center">
                                                            <%= categoryOffersDet[i].endDate.toLocaleDateString('en-US',
                                                                { year: 'numeric' , month: '2-digit' , day: '2-digit' })
                                                                %>
                                                        </div>
                                                    </td>
                                                    <td id="currentStatus<%= i %>">
                                                        <div class="d-flex justify-content-center">
                                                            <%= categoryOffersDet[i].currentStatus %>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex justify-content-center">
                                                            <button type="button" class="btn btn-info"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#editModal<%= i %>">
                                                                <i class="fas fa-edit"></i>
                                                            </button>
                                                        </div>
                                                    </td>

                                                </tr>
